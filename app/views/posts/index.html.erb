<div class="main">
			<div class="container">
				<div class="row">
					<%= form_for(@new_post) do |f| %>
						<div class="col-xs-8 col-md-10">
							
							<%= f.text_field :comment, :placeholder => "Comment here" %>


							
						</div>

						<div class="col-xs-4 col-md-2">
							<%= f.submit :post, :class => 'btn' %>
						</div>

					<% end %>
				</div>



				<ul class="comments" id="comments">
						<% @posts.each.reverse_each do |p| %>
							<li> <%= p.comment %> </li>
							<p class="date"><%= @date %></p>
						<% end %>

				</ul>
				

			</div>
		</div>